[Tests]
  design = 'EquilibriumBC.md'
  issues = '#12'
  validation = 'val-2f.md'
  [val-2f_heavy_csv]
    type = CSVDiff
    input = val-2f.i
    cli_args = 'Outputs/file_base=val-2f_heavy_out'
    csvdiff = val-2f_heavy_out.csv
    heavy = true
    requirement = 'The system shall be able to model self-damaged tungsten effects on deuterium transport and generate CSV data output.'
  []
  [val-2f_exodus]
    type = Exodiff
    input = val-2f.i
    cli_args = "Mesh/active=cartesian_mesh_coarse Executioner/nl_abs_tol=1e-6 charge_time='${units 0.01 h -> s}' cooldown_duration='${units 0.01 h -> s}'"
    exodiff = val-2f_out.e
    requirement = 'The system shall be able to model self-damaged tungsten effects on deuterium transport with a short runtime suitable for regular regression testing.'
  []
  [val-2f_comparison]
    type = RunCommand
    command = 'python3 comparison_val-2f.py'
    requirement = 'The system shall be able to generate comparison plots between simulated solutions and experimental data of validation case val-2f, modeling self-damaged tungsten effects on deuterium transport.'
